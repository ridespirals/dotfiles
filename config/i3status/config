# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "volume master"
order += "disk /"
order += "disk /media/john/Media"
order += "disk /media/john/IO"
order += "disk /media/john/Quantum"
order += "cpu_usage"
order += "cpu_temperature 0"
# order += "memory"
# order += "load"
order += "tztime local"
order += "ethernet enp12s0"
order += "ethernet tun0"

disk "/" {
    format = "/: %avail"
}

disk /media/john/Media {
    format = "Media: %avail"
}

disk /media/john/IO {
    format = "IO: %avail"
}

disk /media/john/Quantum {
    format = "quantum: %avail"
}

ethernet enp12s0 {
  format_up = "%ip"
}

ethernet tun0 {
  format_up = "%ip"
}

cpu_usage {
    format = "cpu: %usage"
}

cpu_temperature 0 {
  format = "🌡️ %degrees°C"
}

# memory {
#     format = "%free %available (%used) / %total"
#     threshold_degraded = "10%"
#     format_degraded = "MEMORY: %free"
# }

volume master {
  format = "🔊 %volume"
  format_muted = "🔇 %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

load {
  format = "load: %1min %5min %15min"
  format_above_threshold= "⚡ %1min %5min %15min ⚡"
}

tztime local {
  format = "🗓️%A, %Y-%m-%d 🕗 %H:%M"
}
